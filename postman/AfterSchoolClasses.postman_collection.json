{
    "info": {
        "name": "After School Classes API",
        "description": "REST API for After School Classes application - CST3144 Coursework",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Health Check",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{baseUrl}}/health",
                    "host": ["{{baseUrl}}"],
                    "path": ["health"]
                },
                "description": "Check server and database status"
            }
        },
        {
            "name": "GET All Lessons",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{baseUrl}}/lessons",
                    "host": ["{{baseUrl}}"],
                    "path": ["lessons"]
                },
                "description": "Returns all lessons from MongoDB as JSON array"
            }
        },
        {
            "name": "POST Create Order",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"name\": \"John Doe\",\n    \"phone\": \"07123456789\",\n    \"lessonIDs\": [\"lesson_id_1\", \"lesson_id_2\"],\n    \"spaces\": 2\n}"
                },
                "url": {
                    "raw": "{{baseUrl}}/orders",
                    "host": ["{{baseUrl}}"],
                    "path": ["orders"]
                },
                "description": "Creates a new order in the orders collection. Required fields: name, phone, lessonIDs, spaces"
            }
        },
        {
            "name": "PUT Update Lesson",
            "request": {
                "method": "PUT",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"spaces\": 3\n}"
                },
                "url": {
                    "raw": "{{baseUrl}}/lessons/{{lessonId}}",
                    "host": ["{{baseUrl}}"],
                    "path": ["lessons", "{{lessonId}}"]
                },
                "description": "Updates any attribute of a lesson. Can update: subject, location, price, spaces, image. Replace {{lessonId}} with actual MongoDB ObjectId."
            }
        },
        {
            "name": "PUT Update Lesson - Multiple Fields",
            "request": {
                "method": "PUT",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"subject\": \"Advanced Math\",\n    \"price\": 120,\n    \"spaces\": 4\n}"
                },
                "url": {
                    "raw": "{{baseUrl}}/lessons/{{lessonId}}",
                    "host": ["{{baseUrl}}"],
                    "path": ["lessons", "{{lessonId}}"]
                },
                "description": "Example of updating multiple attributes at once. Can update: subject, location, price, spaces, image."
            }
        }
    ],
    "variable": [
        {
            "key": "baseUrl",
            "value": "http://localhost:3000",
            "type": "string"
        },
        {
            "key": "lessonId",
            "value": "YOUR_LESSON_ID_HERE",
            "type": "string"
        }
    ]
}
